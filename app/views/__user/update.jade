extends ../layout

block title
    title Update
block content
    .row
        .col.s12.blue.darken-4.white-text.z-depth-1
            .container
                h1 
                    i(class="fa fa-user") 
                    span(style="margin-left:10px;") #{title} 
    .row     
        .container
            .card-panel.white
                form(action='/admin/users/#{model._id}?_method=PUT', 
                method='post')
                    .input-field
                        label Username
                        //- Khong dung value = "#{model.xx}" -> undefined 
                        input(type="text", name="username", value=model.username)
                    .input-field
                        label Password
                        input(type="password", name="password", value=model.password)    
                    .input-field
                        label Email
                        input(type="email", name="email", value=model.email)  
                    .input-field
                        label Birthday
                        input(type="text", name="birthday", value=model.birthday)      
                    .input-field 
                        label Role
                        input(type="text", name="role", value=model.role)
                    .input-field
                        input(type="submit", name="submit", value="Update", class="btn") 
                        span(style="margin-right:10px;")  
                        a(href='/admin/users/#{model._id}' class="btn") View 
                    //-- Logged
                    .div
                        - var updatedAt = new Date()
                        - var updatedBy = user._id
                        input(type="hidden", name="updatedAt", value="#{updatedAt}")
                        input(type="hidden", name="updatedBy", value="#{updatedBy}")
                            
